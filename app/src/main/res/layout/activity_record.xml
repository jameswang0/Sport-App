<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4000BCD4"
    tools:context=".Record">

    <TextView
        android:id="@+id/sport"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:text="運動名稱"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:text="重量 WEIGHT (Kg)"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/sport"
        app:layout_constraintStart_toStartOf="@+id/sport"
        app:layout_constraintTop_toBottomOf="@+id/edit_sport" />

    <TextView
        android:id="@+id/set"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:text="組數  SETS"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/weight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/weight"
        app:layout_constraintTop_toBottomOf="@+id/edit_weight" />

    <EditText
        android:id="@+id/edit_sport"
        android:layout_width="290dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="@+id/sport"
        app:layout_constraintHorizontal_bias="0.336"
        app:layout_constraintStart_toStartOf="@+id/sport"
        app:layout_constraintTop_toBottomOf="@+id/sport" />

    <EditText
        android:id="@+id/edit_weight"
        android:layout_width="290dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="@+id/weight"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/weight"
        app:layout_constraintTop_toBottomOf="@+id/weight" />

    <EditText
        android:id="@+id/edit_set"
        android:layout_width="290dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="@+id/set"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="@+id/set"
        app:layout_constraintTop_toBottomOf="@+id/set" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:text="下數  REPS"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edit_set"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="@+id/edit_set"
        app:layout_constraintTop_toBottomOf="@+id/edit_set" />

    <EditText
        android:id="@+id/edit_reps"
        android:layout_width="290dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="144dp"
        android:layout_marginRight="144dp"
        android:onClick="showPopup"
        android:text="SPORT"
        android:background="@drawable/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:text="日期   DATE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edit_reps"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/edit_reps"
        app:layout_constraintTop_toBottomOf="@+id/edit_reps" />

    <EditText
        android:id="@+id/edit_date"
        android:layout_width="290dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="406dp"
        android:layout_height="98dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_return"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_account_circle_black_24dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/go_search"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_search_black_24dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_library_books_black_24dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/go_oldman"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_directions_walk_black_24dp"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="255dp"
        android:layout_height="59dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout">

        <Button
            android:id="@+id/btn_graph"
            android:layout_width="127dp"
            android:layout_height="61dp"
            android:onClick="graphPopup"
            android:background="@drawable/ic_insert_chart_black_24dp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/save"
            android:layout_width="127dp"
            android:layout_height="61dp"
            android:background="@drawable/ic_cloud_upload_black_24dp"
            android:textSize="30sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>