<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">

    <EditText
        android:id="@+id/search"
        android:layout_width="276dp"
        android:layout_height="74dp"
        android:layout_marginTop="252dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="點擊這裡搜尋" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/glass"
        app:layout_constraintEnd_toEndOf="@+id/search"
        app:layout_constraintStart_toStartOf="@+id/search"
        app:layout_constraintTop_toBottomOf="@+id/search" />

    <Button
        android:id="@+id/speech_button"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/speech"
        app:layout_constraintStart_toEndOf="@+id/search"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="getSpeechInput"/>

    <Button
        android:id="@+id/Twn_btn"
        android:layout_width="86dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/microphone"
        app:layout_constraintStart_toEndOf="@+id/search"
        app:layout_constraintTop_toBottomOf="@+id/speech_button" />

    <Button
        android:id="@+id/suggest_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:text="Sport Suggestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="148dp"
        android:layout_height="34dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="120dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="153dp"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/go_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/profile"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/go_search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/search"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/go_record"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/record"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/go_oldman"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/oldman"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>